@model DangKyHocPhan

@{
Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 5px;
        border: 1px solid #555;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }

    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
</style>

<div class="fixed top-0 ml-[174px] mt-[140px] font-bold text-xl">Sửa đăng ký học phần</div>
<div class="fixed top-0 ml-[174px] mt-[200px] h-[80vh] w-full">
    <div class="custom-scrollbar h-5/6 w-[88%] overflow-y-auto">
        <form asp-controller="DangKyHocPhan" asp-action="UpdateDangKyHocPhan" asp-route-id="@Model.Id" method="post">
            <div class="">
                <label asp-for="@Model.Id" class="font-bold block"></label>
                <input asp-for="@Model.Id" class="w-full py-3 pl-4 mt-2 outline-none border-2 border-gray-200 rounded-lg shadow bg-gray-200" placeholder="Nhập mã sinh viên" readonly>
                <span asp-validation-for="@Model.Id" class="text-red-500 mt-2"></span>
            </div>
            <div class="mt-4">
                <label asp-for="@Model.SinhVienId" class="font-bold block">Sinh Viên id</label>
                <input asp-for="@Model.SinhVienId" class="w-full py-3 pl-4 mt-2 outline-none border-2 border-white rounded-lg shadow" placeholder="Nhập mã sinh viên">
                <span asp-validation-for="@Model.SinhVienId" class="text-red-500 mt-2"></span>
            </div>
            <div class="mt-4">
                <label asp-for="@Model.LopHocPhanId" class="font-bold block">Lớp học phần id</label>
                <input asp-for="@Model.LopHocPhanId" class="w-full py-3 pl-4 mt-2 outline-none border-2 border-white rounded-lg shadow" placeholder="Nhập họ tên">
                <span asp-validation-for="@Model.LopHocPhanId" class="text-red-500 mt-2"></span>
            </div>
            <div class="mt-4">
                <label asp-for="@Model.NgayDangKy" class="font-bold block">Ngày đăng ký</label>
                <input asp-for="@Model.NgayDangKy" class="w-full py-3 pl-4 mt-2 outline-none border-2 border-gray-200 rounded-lg shadow bg-gray-200" placeholder="Nhập ngày sinh" readonly>
                <span asp-validation-for="@Model.NgayDangKy" class="text-red-500 mt-2"></span>
            </div>
            <div class="mt-4 flex justify-between">
                <button type="submit" class="py-3 px-10 outline-none bg-[#fcbf49] rounded-lg text-white shadow font-bold">Sửa</button>
                <button asp-controller="DangKyHocPhan" asp-action="Index" class="py-3 px-10 outline-none bg-[#ce4257] rounded-lg text-white shadow font-bold">Trở lại</button>
            </div>
        </form>
    </div>
</div>